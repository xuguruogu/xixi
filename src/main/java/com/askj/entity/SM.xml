<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.askj.entity.SM">
	<insert id="insert" parameterType="com.askj.entity.SM">
		INSERT INTO t_sm (content,publishTime) VALUES (#{content},#{publishTime})
	</insert>
	
	<delete id="delete_by_id" parameterType="int">
		DELETE FROM t_sm WHERE id=#{id}
	</delete>
	
	<select id="selectCount" parameterType="com.askj.entity.Page" resultType="int">
		SELECT COUNT(*) FROM t_sm 
	</select>

	<select id="select_by_page" parameterType="com.askj.entity.Page" resultType="com.askj.entity.SM">
		SELECT * FROM t_sm ORDER BY publishTime DESC LIMIT #{startIndex},#{pageSize}
	</select>
</mapper>