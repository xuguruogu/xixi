<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.askj.entity.AboutUs">
	<insert id="insert" parameterType="com.askj.entity.AboutUs">
		INSERT INTO t_aboutus (content) VALUES (#{content})
	</insert>

	<select id="query" resultType="com.askj.entity.AboutUs">
		SELECT * FROM t_aboutus LIMIT 1
	</select>
	
	<select id="select_last_insert">
		SELECT LAST_INSERT_ID()
	</select>
	
	<update id="update" parameterType="com.askj.entity.AboutUs">
		UPDATE t_aboutus SET content=#{content} WHERE id=#{id}
	</update>
</mapper>