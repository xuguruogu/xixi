<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.askj.entity.Role"> 
	<select id="selectCount" parameterType="com.askj.entity.Page" resultType="int">
		select count(*) from t_role
	</select>
	<select id="checkName" parameterType="String" resultType="int">
		select count(*) from t_role where roleName=#{roleName}
	</select>
	<select id="select_by_name" parameterType="String" resultType="com.askj.entity.Role">
		select * from t_role where roleName=#{roleName}
	</select>
	<insert id="insert" parameterType="com.askj.entity.Role">
		insert into t_role (roleName) value (#{roleName})
	</insert>
	<update id="updateRole" parameterType="com.askj.entity.Role">
		update t_role set roleName=#{roleName} where id=#{id}
	</update>
	<delete id="delete_by_id" parameterType="int">
		delete from t_role where id=#{id}
	</delete>
	<select id="select_by_id" parameterType="int" resultType="com.askj.entity.Role">
		select 
			id,
			roleName 
		from 
			t_role 
					where id=#{id}
	</select>
	
	<select id="select_last_insert" resultType="int">
		SELECT LAST_INSERT_ID()
	</select>
	
	<select id="select_by_page" parameterType="com.askj.entity.Page" resultType="com.askj.entity.Role">
		SELECT 
			id,
			roleName 
		FROM 
			t_role 
		LIMIT #{startIndex},#{pageSize}
	</select>
	
	<select id="selectAll" resultType="com.askj.entity.Role">
		select * from t_role
	</select>
</mapper>
  
  
  