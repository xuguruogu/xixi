<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.askj.entity.Feedback">
	<insert id="insert" parameterType="com.askj.entity.Feedback">
		INSERT INTO t_feedback (
			customerID,
			content,
			date
		) VALUES (
			#{customer.id},
			#{content},
			#{date}
		) 
	</insert>
	
	<delete id="delete_by_id" parameterType="int">
		DELETE FROM t_feedback WHERE id=#{id}
	</delete>
	
	<select id="selectCount" parameterType="com.askj.entity.Page" resultType="int">
		SELECT COUNT(*) FROM t_feedback 
	</select>
	
	<select id="select_by_page" parameterType="com.askj.entity.Page" resultMap="fbResult">
		SELECT 
			f.id,
			CAST(f.content AS CHAR CHARACTER SET utf8) AS content,
			f.date,
			c.id as cid,
			c.nickname as cnickname 
		FROM t_feedback f JOIN t_customer c ON f.customerID = c.id 
		ORDER BY f.date DESC 
		LIMIT #{startIndex},#{pageSize}
	</select>
	
	<resultMap type="com.askj.entity.Feedback" id="fbResult">
		<id column="id" property="id"/>
		<result column="content" property="content"/>
		<result column="date" property="date"/>
		<association property="customer" javaType="com.askj.entity.Customer">
			<id column="cid" property="id"/>
			<result column="cnickname" property="nickname"/>
		</association>
	</resultMap>
</mapper>