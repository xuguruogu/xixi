<?xml version="1.0" encoding="GB2312" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="LX_USER_LOGIN_LOG">
	<resultMap type="LxUserLoginLogDO" id="lxUserLoginLogResult">
		<id property="id" column="ID" javaType="java.lang.Long" jdbcType="NUMERIC" />
		<result property="gmtLogin" column="GMT_LOGIN" javaType="java.util.Date" jdbcType="DATE" />
		<result property="userId" column="USER_ID" javaType="java.lang.Long" jdbcType="NUMERIC" />
		<result property="ipAdr" column="IPADR" javaType="java.lang.String" jdbcType="VARCHAR" />
	</resultMap>

	<insert id="insert" parameterType="LxUserLoginLogDO">
		INSERT INTO LX_USER_LOGIN_LOG (
		USER_ID,
		IPADR
		)
		VALUES (
		#{userId},
		#{ipAdr})
	</insert>

	<select id="selectById" parameterType="long" resultMap="lxUserLoginLogResult">
		select * from LX_USER_LOGIN_LOG WHERE id=#{id}
	</select>

	<delete id="deleteById" parameterType="long">
		delete from LX_USER_LOGIN_LOG
		WHERE ID=#{id}
	</delete>

	<select id="selectCountByQueryCondition" parameterType="java.util.Map" resultType="long">
		select COUNT(*) from LX_USER_LOGIN_LOG
		<include refid="QueryCondition" />
	</select>

	<select id="selectByQueryCondition" parameterType="java.util.Map" resultMap="lxUserLoginLogResult">
		SELECT * FROM LX_USER_LOGIN_LOG
		<include refid="QueryCondition" />
		<include refid="Pagination" />
	</select>

	<!-- 查询条件 -->
	<sql id="QueryCondition">
		<trim prefix="where" prefixOverrides="and|or">

			<if test="userId != null or ipAdr != null">
				(
				<trim prefixOverrides="and|or">
					<if test="userId != null">
						USER_ID LIKE #{userId}
					</if>
					<if test="ipAdr != null">
						or IPADR LIKE #{ipAdr}
					</if>
				</trim>
				)
			</if>

			<if test="gmtLoginBegin != null ">
                <![CDATA[
				and GMT_LOGIN >= #{gmtLoginBegin}
				]]>
			</if>
			<if test="gmtLoginEnd != null ">
                <![CDATA[
				and GMT_LOGIN <= #{gmtLoginEnd}
				]]>
			</if>
		</trim>
	</sql>

	<!-- 分页 -->
	<sql id="Pagination">
		<if test="startIndex != null and pageSize != null">
			LIMIT #{startIndex},#{pageSize}
		</if>
	</sql>
</mapper>
